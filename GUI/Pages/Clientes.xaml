<Page x:Class="GUI.Pages.Clientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Clientes" Background="{DynamicResource PrimaryColor}">

    <!-- Grid que envuelve todo el contenido de la página -->
    <Grid Margin="0,-18,0,0">
        
        <!-- Contenido de la página dentro del ContentGrid -->
        <Grid x:Name="ContentGrid" Margin="0,27,0,0">

            <Label Content="Lista Clientes" Margin="0,0,0,0" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryBlueText}"/>
            <Label Content="Cedula" Margin="28,50,675,208" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource PrimaryBlueText}"/>
            <Label Content="Nombre" Margin="125,50,567,208" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource PrimaryBlueText}"/>
            <Label Content="Apellido" Margin="238,50,458,208" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource PrimaryBlueText}"/>
            <Label Content="Correo" Margin="347,50,242,208" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource PrimaryBlueText}"/>

            <!-- StackPanel principal donde se agregarán los usuarios -->

            <StackPanel x:Name="MainStackPanel" Margin="0,112,0,82" HorizontalAlignment="Center">

                <Image Source="/Images/buscar.png" Height="20" Width="20" Margin="280 -115 0 0"/>
                <TextBox x:Name="Buscar"
                        FontSize="16"
                        FontWeight="Normal"
                        FontFamily="Montserrat"                            
                        Foreground="{DynamicResource PrimaryBlueText}"
                        CaretBrush="LightGray"
                        Background="Transparent"
                        BorderBrush="{DynamicResource SecundaryBlueText}"
                        BorderThickness="0,0,0,2"
                        Height="25"
                        Width="220"
                        Margin="550 -115 0 0"/>

                <Button x:Name="AgregarCliente" Content="Agregar Cliente" Margin="0 460 0 0"
                        Click="CrearCliente_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBlueText}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="red"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="20" Height="20"
                    CornerRadius="5"
                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
           

            <Border CornerRadius="0 0 5 0" Margin="0,33,0,0">
                <Frame x:Name="frameContent" NavigationUIVisibility="Hidden" Margin="10,-40,10,27"/>
            </Border>

        </Grid>

    </Grid>
</Page>
